<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/more_iv">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="汝果"
            tools:textColor="@color/qmui_config_color_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="10sp"
            tools:text="TIUUYT…IUYJPL"
            tools:textColor="@color/qmui_config_color_white" />

        <ImageView
            android:id="@+id/check_mark_iv"
            android:layout_width="20dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_white_checkmark"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="10dp"
        android:layout_height="11dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:src="@mipmap/ic_gray_arrow" />

</com.noober.background.view.BLRelativeLayout>